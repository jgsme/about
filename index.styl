body
  background-color #eee
  font-family 'Lato', sans-serif

  h1
    font-size 128px
  h2
    font-size 42px
    margin-top -100px

  ul
    border-left 3px solid #555
    margin-left 100px
    padding-left 5px
    font-size 36px
    list-style-type none

    li
      margin-top 36px
      a
        color #333
        text-decoration none
        &:hover
          text-shadow 0px 0px 15px rgba(97, 97, 97, 0.5), 0px 0px 10px rgba(97, 97, 97, 0.5)
          