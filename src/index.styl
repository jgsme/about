body
  background-color #eee
  font-family 'Lato', sans-serif

  h1
    font-size 10em

  h2
    font-size 4em
    margin-top -1.8em

  h3
    font-size 2.5em

  .links
    border-left 3px solid #555
    margin-left 100px
    padding-left 5px
    font-size 36px
    list-style-type none

    li
      margin-top 36px
      a
        color #333
        text-decoration none
        &:hover
          text-shadow 0px 0px 15px rgba(97, 97, 97, 0.5), 0px 0px 10px rgba(97, 97, 97, 0.5)

  .activities
    font-family sans-serif

    li
      list-style none

    .type
      font-size 1.3em
      margin-bottom 0

    .title
      padding-left 1em
      margin-top 0

      a
        color #000
        &:hover
          color #3c3c3c
